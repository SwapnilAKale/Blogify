<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/head") %>
    <title>Login Page</title>
    <style>
        body {
            color: #f5f5f5;
            background-color: #1e1e1e;
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        #container {
            background-color: #2c2c2c;
            width: 90%;
            max-width: 400px;
            margin: 135px auto;
            padding: 20px;
            text-align: center;
            border: 1px solid #F2F0EF;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        #login {
            background-color: #4a4a4a;
            margin: 10px 0;
            padding: 20px;
            border: 1px #F2F0EF solid;
            border-radius: 10px;
            color: #f5f5f5;
        }

        #signup {
            padding: 10px;
        }

        label {
            display: block;
            color: #f5f5f5;
            margin-bottom: 5px;
        }

        input {
            width: calc(100% - 20px);
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #555;
            margin-bottom: 10px;
            background-color: #333;
            color: #f5f5f5;
            transform: scale(1);
            transition: transform 0.1s;
        }

        input:focus {
            transform: scale(1.02);
            outline: none;
            border: 1px solid white; 
        }

        button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #0056b3;
        }

        #signupbutton {
            background-color: #6c757d;
        }

        #signupbutton:hover {
            background-color: #5a6268;
        }
        #login p {
            margin-bottom: -5px;
        }
    </style>
</head>

<body>
    <%- include("./partials/loginnav") %>
    <div id="container">
        <div id="login">
            <form method="POST" action="/login" onsubmit="return validateForm()">
                <label for="username">Username</label>
                <input type="text" id="username" name="UserName" autocomplete="off">
                <label for="password">Password</label>
                <input type="password" id="password" name="PassWord" autocomplete="off">
                <p><button type="submit">Login</button></p>
            </form>
        </div>
        <div id="signup">
            <form method="GET" action="/signup">
                <button type="submit" id="signupbutton">Don't have an account? Sign up</button>
            </form>
        </div>
    </div>
    <%- include("./partials/script") %>
    <script>
        function trimUsername() {
            const usernameField = document.getElementById("username");
            usernameField.value = usernameField.value.trim().toLowerCase();
        }
        function validateForm() {
            trimUsername();
        }
    </script>
</body>

</html>
